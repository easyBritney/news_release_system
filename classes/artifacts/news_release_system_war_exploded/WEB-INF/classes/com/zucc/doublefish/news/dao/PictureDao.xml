<mapper namespace="com.zucc.doublefish.news.dao.PictureDao">
    <!--<resultMap id="imgResultList" type="java.util.List">-->
        <!--<result jdbcType="BLOB" typeHandler="org.apache.ibatis.type.BlobByteObjectArrayTypeHandler"/>-->
        <!--<result-->
